# Copied from dotfiles [Mon Jun  4 08:12:11 2018]

unbind %
bind | split-window -h
bind - split-window -v

# utf8
set-window-option -g utf8 on

# Use zsh
set-option -g default-shell /usr/local/bin/bash

# It's 2012
set -g default-terminal "screen-256color"

# window title:
set-option -g set-titles on
set-option -g set-titles-string '[#S:#I.#P] #W'
set-window-option -g automatic-rename on

# mouse
set-window-option -g mode-mouse on
set-option -g mouse-select-pane on

# copy mode to escape key:
unbind-key [
bind-key Escape copy-mode

# movind and swapping:
bind-key N swap-pane -D
bind-key P swap-pane -U

# Use c-a as prefix
set -g prefix C-a
unbind C-b
bind C-a send-prefix
bind-key a send-key C-a

# Start numbering at 1
set -g base-index 1
setw -g pane-base-index 1

# use hjkl for moving
# and HJKL for resizing
setw -g mode-keys vi
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R
bind-key -r C-h select-window -t :-
bind-key -r C-l select-window -t :+
bind -r H resize-pane -L 5
bind -r J resize-pane -D 5
bind -r K resize-pane -U 5
bind -r L resize-pane -R 5

# shortcut for closing windows and panes
bind-key c      kill-pane
bind-key C      kill-window
bind-key q      confirm-before kill-session
bind-key Q      confirm-before kill-server
unbind o
bind o kill-pane -a
unbind c
bind w new-window

# Rather than constraining window size to the maximum size of any client
# connected to the *session*, constrain window size to the maximum size of any
# client connected to *that window*. Much more reasonable.
setw -g aggressive-resize on

# Coloring everything
set -g status-fg white
set -g status-bg black
setw -g window-status-fg cyan
setw -g window-status-bg default
setw -g window-status-attr dim
setw -g window-status-current-fg white
setw -g window-status-current-bg red
setw -g window-status-current-attr bright
set -g pane-border-fg white
set -g pane-border-bg black
set -g pane-active-border-fg green
set -g pane-active-border-bg black
set -g message-bg magenta
set -g message-fg white
set -g message-attr bright
set-option -g visual-activity on
set-window-option -g mode-bg magenta
set-window-option -g mode-fg black

set-window-option -g monitor-activity on
set-window-option -g window-status-current-bg black
set-window-option -g window-status-current-fg white
set-window-option -g window-status-bg black
set-window-option -g window-status-fg cyan

# statusbar
set -g status-utf8 on
set -g status-justify right
set -g status-interval 5
set -g status-left-length 60
set -g status-bg black
set -g status-fg cyan
set -g status-left "#[fg=green]#(whoami)#[fg=blue,bold]@#T#[default]"
set -g status-right '#[fg=magenta]>> #[fg=black,bold]###[fg=blue,bold]#S:#P #[fg=magenta,nobold]%a,%d/%m#[fg=white]|#[fg=black,bold]#(uptime|cut -d ":" -f4)#[fg=white]|#[fg=blue,bold]%R#[default]'

# clock
set-window-option -g clock-mode-colour cyan
set-window-option -g clock-mode-style 24
